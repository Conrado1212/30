<%- include("header.ejs") %>
   <main>
       <section class="title">
            <h1 class="title-value">Your own <span>blogging</span> <br>platform.</br></h1>
            <p><%-  data.titleContent %></p>
            <form class="blogs">
                <input type="text" name="search" placeholder="Search for blogs" required id="searchBlog">
                <button type="submit" class="btn" id="searchBtn"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
            </form>
       </section>
       <section class="container">
            <div class="category">
                <% for(let i=0;i<data.items.length;i++){%>
                    <div class="cat">
                        <button class="btn <%= i===0 ? 'active' : '' %>" data-category="<%=data.items[i]%>"><%=data.items[i]%></button>
                    </div>
                    <%  }%>
                <div class="cat">
                    <button class="btn"><i class="fa-solid fa-plus"></i></button>
                </div>
            </div>
            <div class="articles">
                <% for(let i=0;i<blogArt.length;i++){%>
                    <div class="article-wrapper" id="wrapper<%= blogArt[i].id %>" data-type="<%= blogArt[i].type %>">
                        <div class="bars">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                     <div class="article" id="<%= blogArt[i].id %>">
                        <img src="<%= blogArt[i].img %>" alt="life1" loading="lazy">
                        <span><%= blogArt[i].type %></span>
                        <div class="desc">
                            <h5><%= blogArt[i].title %></h5>
                            <p class="info"><%= blogArt[i].desc %></p>
                        </div>
                     </div>
                    </div>
                    <%  }%>
            </div>
       </section>
       <section class="newsletter">
            <h1>Never Miss a <span>Blog!</span></h1>
            <p><%-  data.newsContent %></p>
            <form>
                <input type="text" name="newsletter" placeholder="Enter your valid email id" required>
                <button type="submit" class="btn"><i class="fa-solid fa-magnifying-glass"></i>Subscribe</button>
            </form>
        </section>
   </main>
   <%- include("footer.ejs") %>
</body>
</html>